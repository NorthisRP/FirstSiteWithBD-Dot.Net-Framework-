@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Регистрация</title>
    <link rel="stylesheet" href="~/Content/regstyle.css">
</head>

<body>
    <form method="post">
        <div class="container">
            <h1>Регистрация</h1>
            <p>Для создания аккаунта заполните форму.</p>
            <hr>

            <label for="email"><b>Электронная почта</b></label>
            <input type="text" placeholder="Введите почту" name="Email" required>

            <label for="name"><b>Имя</b></label><br>
            <input type="text" placeholder="Введите имя" name="Name" required>

            <label for="surname"><b>Фамилия</b></label><br>
            <input type="text" placeholder="Введите имя" name="Surname" required>

            <label for="password"><b>Пароль</b></label><br>
            <input type="password" placeholder="Введите пароль" name="Password" required>
            <hr>

            <p>Регистрируясь вы соглашаетесь с нашими правилами <a href="#">Terms & Privacy</a>.</p>
            <button type="submit" class="registerbtn">Зарегистрироваться</button>
        </div>
    </form>

    <div class="container signin">
        <p>Уже есть аккаунт? @Html.ActionLink("Войти", "Login", "Home").</p>
    </div>




</body>
</html>
